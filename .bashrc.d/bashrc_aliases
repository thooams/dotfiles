alias ls='ls'
alias ll='ls -lF'
alias la='ls -alF'
alias grep='grep --color=auto'

alias lorig='find .  -name "*.orig"'
alias rorig='find .  -name "*.orig" -exec rm -f {} \;'

# git
alias gti="git"
alias tgi="git"
alias tig="git"
alias itg="git"
alias igt="git"

# rake
alias rake="bundle exec rake"

alias ctags="`brew --prefix`/bin/ctags"
