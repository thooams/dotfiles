set $ws1 "1: Editor"
set $ws2 "2: Mail"
set $ws3 "3: Console"
set $ws4 "4: Music"
set $ws5 "5: IM"
set $ws6 "6: Browser"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
