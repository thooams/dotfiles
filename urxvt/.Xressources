! ===================
!       urxvt
! ===================

URxvt*scrollBar:	    false
URxvt*letterSpace:  	-1
URxvt.internalBorder: -1
URxvt*boldFont:		    xft:RobotoMono Nerd Font Mono:bold:size=13
URxvt*font:	    	    xft:RobotoMono Nerd Font Mono:bold:size=13
URxvt*cursorBlink:    true
URxvt.iso14755:		    false
URxvt*utf8:			      true

! on active les modules nécesssaires
!URxvt.perl-ext: selection.mark-and-vank, resize-font
!URxvt.perl-ext-common : default, tabbed, matcher, resize-font, -tabbed


URxvt.perl-ext-common: default,resize-font,url-select,keyboard-select,config-reload

URxvt.keysym.C-minus:     resize-font:smaller
URxvt.keysym.C-plus:      resize-font:bigger
URxvt.keysym.C-equal:     resize-font:reset
URxvt.keysym.C-question:  resize-font:show
!! On définite comment passe ne mode copie: alt-y
!URxvt.keysym.M-y: perl:mark-and-yank:activate_mark_mode

! =================
!       Xft
! =================
Xft.dpi:          	96
Xft.antialias:     	true
Xft.rgba:			      subpixel
Xft.hinting:       	true
Xft.hintstyle:		  hintslight

! URrxvt*depth: 32
! URxvt*background: rgba:0000/0000/0200/c800

URxvt*transparent: true
URxvt*shading: 10



! Xft.lcdfilter:	  lcddefault

